<div class="row">
  <div class="col-xs-12">
    <p><%= t("hello") %> <b><%= current_user.name %></b>!
      <%= link_to t("edit_user"), edit_user_registration_path, class: "btn btn-xs btn-default" %>
    </p>
  </div>
</div>

<div class="row" style="padding: 24px 0">
  <div class="col-xs-12">
    <form method="get" action="<%= products_path %>" class="form-inline search">
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "name,code or tag:name" %>
      <%= submit_tag t('search'), class: 'btn btn-primary' %>
    </form>
  </div>
</div>
<div class="row">
  <% @tags.each do |tag| %>
    <div class="col-sm-4 col-md-2">
      <figure>
        <%= link_to image_tag(tag.picture_path, class: "img-thumbnail"), products_path(search: "tag:"+tag.code) %>
        <figcaption><%= tag.name %></figcaption>
      </figure>
    </div>
  <% end %>
</div>
<div class="row" style="padding: 24px 0">
  <% @recents.each do |product| %>
    <div class="col-sm-3">
      <figure>
        <%= link_to image_tag(product.picture_path, class: "img-thumbnail img-responsive"), product_path(product) %>
        <figcaption><%= product.name %></figcaption>
      </figure>
    </div>
  <% end %>
</div>
<div class="row" style="padding: 24px 0">
  <div class="col-sm-12">
    <%= link_to t("order_history"), orders_history_path, class: "btn btn-default" %>
  </div>
</div>
<div class="row" style="padding: 24px 0">
  <div class="col-sm-12">
    TODO: for distributor
  </div>
</div>

<% if current_user.admin? %>
  <div class="row">
    <div class="col-xs-12 admin">
        <%= link_to "Users", pages_users_path %>
        <%= link_to "Products", products_path %>
        <%= link_to "GitHub", "https://github.com/lumbermill/base.lmlab.net", target: "_blank" %>
    </div>
  </div>
<% end %>
