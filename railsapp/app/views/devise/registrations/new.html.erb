<h2><%= t("Sign up") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t("devise.registrations.edit.characters_minimum")%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "お誕生日" %><br />
    <%= f.date_field :birthdate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_no %><br />
    <%= f.text_field :phone_no, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :memo %><br />
    <%= f.text_field :memo, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>担当ディストリビュータID</label>
    <%= text_field_tag :token, "", class: "form-control" %>
    <small>担当のディストリビュータから伝えられたID(全て半角文字)を入力してください。</small>
  </div>

  <div class="actions">
    <%= f.submit t("Sign up"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
