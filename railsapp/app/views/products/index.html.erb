<%- model_class = Product -%>
<script>
  function btn_clicked(id,b){
  $(b).addClass('disabled');
   $("p#product-"+id).show();
   setTimeout(reset_btn, 5000, id,b);
  }
  function reset_btn(id,b){
    $(b).removeClass('disabled');
    $("p#product-"+id).hide();
  }

</script>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag(product.picture_path, style: "max-height: 64px"), product_path(product) %></td>
        <td>
          <%= link_to product.name+" "+product.size, product_path(product) %> <small class="text-muted"><%= product.code %></small><br/>
          <%= product.copy %>
          <p id="product-<%= product.id %>" style="display: none;"><%= link_to "カート", {:controller => :orders} %> に追加しました。</p>
        </td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "Add to cart", "javascript:void(0)", class: "btn btn-success btn-xs", onclick: "btn_clicked(#{product.id},this)" %>
          <% if current_user.admin? %>
          <p class="admin">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          </p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.admin? %>
<p class="admin">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
</p>
<% end %>
