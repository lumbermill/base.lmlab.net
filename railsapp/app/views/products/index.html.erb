<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Code</th>
      <th>Maker</th>
      <th>Name</th>
      <th>Size</th>
      <th>Price</th>
      <th>Cost</th>
      <th>Picture</th>
      <th>Copy</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.user_id %></td>
        <td><%= product.code %></td>
        <td><%= product.maker %></td>
        <td><%= product.name %></td>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= product.cost %></td>
        <td><%= product.picture_id %></td>
        <td><%= product.copy %></td>
        <td><%= product.memo %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

